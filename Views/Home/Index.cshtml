<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Courses</h6>
            <h1 class="mb-5">Popular Courses</h1>
            <div class="mb-4">
                <a href="@Url.Action("Index", "Course")" class="btn btn-primary">View All Courses</a>
            </div>
        </div>
        <div class="row g-4 justify-content-center">
            @if (Model.Courses != null )
            {
                foreach (var course in Model.Courses)
                {
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                        <div class="course-item bg-light w-100">
                            <div class="position-relative overflow-hidden">
                                <img class="img-fluid w-100" src="~/img/@(string.IsNullOrEmpty(course.ImagePath) ? "course-1.jpg" : course.ImagePath)" alt="@course.Title" style="height: 200px; object-fit: cover;">
                                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                    <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 30px;">Join Now</a>
                                </div>
                            </div>
                            <div class="text-center p-4 pb-0 flex-grow-1">
                                <h3 class="mb-0">$@course.Price.ToString("0.00")</h3>
                                <div class="mb-3">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small>(123)</small>
                                </div>
                                <h5 class="mb-4">@course.Title</h5>
                                <p class="mb-4" style="min-height: 60px; overflow: hidden;">
                                    @(course.Description?.Length > 100 ? $"{course.Description.Substring(0, 100)}..." : course.Description)
                                </p>
                            </div>
                            <div class="d-flex border-top mt-auto">
                                <small class="flex-fill text-center border-end py-2">
                                    <i class="fa fa-user-tie text-primary me-2"></i>Instructor
                                </small>
                                <small class="flex-fill text-center border-end py-2">
                                    <i class="fa fa-clock text-primary me-2"></i>@course.DurationHours hrs
                                </small>
                                <small class="flex-fill text-center py-2">
                                    <i class="fa fa-user text-primary me-2"></i>@course.NumberOfStudents
                                </small>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No courses available at the moment. Please check back later.</p>
                </div>
            }
        </div>
    </div>
</div>
